// Experiment version. In pilot phase and later increment this on each 
// relevant change.
const int       EXPERIMENT_VERSION              = 1;


// Database number. Typically set to 1.
const int       DATABASE_NUMBER                 = 1;


// ID of default researcher.
const string    DEFAULT_RESEARCHER_ID           = "Ash_Ketchup"; // John Doe


// Whether experiment record, researcher record and group record should be
// checked for updating (true) or reading only (false) during the experiment
// session. The participant record and experiment session record are always
// checked out for updating.
const bool      EXPERIMENT_RECORD_UPDATEABLE    = false;
const bool      RESEARCHER_RECORD_UPDATEABLE    = false;
const bool      GROUP_RECORD_UPDATEABLE         = false;


// Controls whether the assigned group is shown in the control window. Set 
// this to false if the experimenter should not be aware of the selected 
// group.
const bool      SHOW_ASSIGNED_GROUP             = true;


// Number of result tables to generate. 
const int       NUM_RESULT_TABLES               = 1;


// The following are timing parameters and other settings.

// Duration of the interval between two trials.
const dur       INTERTRIAL_INTERVAL             = 500ms;

// Delay from drift-check to visual stimulus.
const dur       DC_VISUAL_DELAY                 = 100ms;

// Delay from visual stimulus onset to auditory stimulus.
const dur       AUDITORY_DELAY                  = 0ms;

// Delay between manual participant response and recording end.
const dur       RECORD_EXTRA_AFTER_RESPONSE = 0ms;

// Delay from auditory target onset to response interval. Negative means
// allow responding before the target begins. 
// The resulting shift will never be earlier than audio stimulus onset. 
const dur       RESPONSE_SHIFT                  = 0ms;

// Duration of the response interval. A value of 0ms means there is no
// timeout.
//const dur       RESPONSE_DURATION               = 5000ms;       // auto-paced
const dur       RESPONSE_DURATION               = 0ms;          // self-paced

const bool  SELECT_ITEMS_BY_MOUSE = false;

const bool  HIGHLIGHT_REGION_OF_INTEREST = false;

const bool  USE_EYETRACKING = false;

const int TEST_CANVAS_SIZES_WIDTH= 400;
const int TEST_CANVAS_SIZES_HEIGHT = 400;
const int   DISTANCE_OUTER_PICTURES = 300;

const int SPACING_INSTRUCTION_STIMULI_PICTURE = 250;

const real IMAGE_SCALING = 1.0;

const dur SELECTION_HIGHLIGHT_DURATION = 500ms;

const bool SHUFFLE_IMAGE_LOCATIONS = false;
